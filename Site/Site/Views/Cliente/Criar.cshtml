@{
    ViewData["Title"] = "Criação do Cliente";
}

<div class="text-center">

    <br />

    <h4 class="display-4">Cadastrar Cliente</h4>
</div>


<form>
    <div class="form-group">
        <label for="inputNome">Nome</label>
        <input type="text" class="form-control" id="nome" aria-describedby="nomeHelp" placeholder="Nome Completo">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="email@servidor.com.br">
        <small id="emailHelp" class="form-text text-muted">Não compartilhe o seu email com desconhecidos</small>
    </div>
    <div class="form-group">
        <label for="avatar">Avatar</label>
        <input type="image" class="form-control" id="avatar" aria-describedby="avatarHelp">
    </div>
    <div class="form-group">
        <label for="logradouroResidencial">Endereço Residencial</label>
        <input type="text" class="form-control" id="logradouroResidencial" aria-describedby="logradourolHelp">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1"> Principal?
        <label for="defaultCheck1" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label for="logradouroComercial">Endereço Comercial</label>
        <input type="text" class="form-control" id="logradouroComercial" aria-describedby="logradourolHelp">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">Principal?
        <label for="defaultCheck2" class="form-check-label"></label>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secundary" role="button" asp-controller="Cliente" asp-action="Index">Voltar</a>
</form>